<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/iv" android:src="@drawable/tick" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_weight="1"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_weight="2"
        >
        <TextView android:id="@+id/disc" android:text="Short Disc" android:layout_width="wrap_content"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_gravity="center"
            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center"
            android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:id="@+id/comp" android:text="complexity" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                />
            <TextView android:id="@+id/stip" android:text="Stipend" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                />
            </LinearLayout>
        </LinearLayout>



</LinearLayout>